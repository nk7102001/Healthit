<% layout("layouts/boilerplate") %>
<% title = "Login - Healthit" %>

<main class="flex-1 flex items-center justify-center px-4 py-20">

  <div class="max-w-md w-full bg-green-50 p-6 rounded-lg shadow-lg">

    <h1 class="text-2xl font-bold text-green-700 mb-6 text-center">
      ğŸ” Login to Healthit
    </h1>

    <!-- ğŸ”¥ Error Message -->
    <% if (typeof message !== "undefined" && message) { %>
      <div class="bg-red-100 text-red-700 px-4 py-2 mb-4 rounded">
        <%= message %>
      </div>
    <% } %>

    <form action="/login" method="POST" class="space-y-4">

      <div>
        <label class="block font-medium mb-1">Email</label>
        <input 
          type="email" 
          name="email" 
          required 
          class="w-full px-4 py-2 border rounded" />
      </div>

      <div>
        <label class="block font-medium mb-1">Password</label>
        <input 
          type="password" 
          name="password" 
          required 
          class="w-full px-4 py-2 border rounded" />
      </div>

      <button 
        type="submit" 
        class="w-full py-2 bg-green-600 text-white rounded hover:bg-green-700 transition">
        Login
      </button>

    </form>

    <div class="text-center mt-4 text-sm text-gray-700">
      Donâ€™t have an account?
      <a 
        href="/signup" 
        class="text-green-600 hover:underline font-medium">
        Sign Up
      </a>
    </div>

  </div>

</main>
