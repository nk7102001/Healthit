<% title = "AI Plan History - Healthit" %>

<main class="flex-1 pt-24 px-6 pb-20 w-full max-w-5xl mx-auto">

  <h1 class="text-3xl font-bold text-green-600 mb-6">
    ğŸ§  Your AI Generated Plans
  </h1>

  <% if (plans.length === 0) { %>

    <p class="text-gray-600">
      You haven't generated any plans yet.
    </p>

  <% } else { %>

    <div class="space-y-6">

      <% plans.forEach((plan) => { %>

        <div class="border p-4 rounded shadow bg-green-50 relative">

          <div class="flex justify-between items-center mb-2">

            <p class="text-sm text-gray-600">
              ğŸ“… <%= plan.createdAt.toDateString() %>
