            <form 
              action="/plans/delete/<%= plan._id %>" 
              method="POST"
              onsubmit="return confirm('Are you sure you want to delete this plan?');">
              
              <button 
                type="submit" 
                class="text-red-500 text-sm hover:underline">
                ğŸ—‘ï¸ Delete
              </button>

            </form>

          </div>

          <p class="text-sm text-gray-700 mb-2">
            ğŸ¯ Goal: <strong><%= plan.goal %></strong>,
            Age: <strong><%= plan.age %></strong>,
            Gender: <strong><%= plan.gender %></strong>,
            Activity: <strong><%= plan.activity %></strong>,
            Diet: <strong><%= plan.diet %></strong>
          </p>

          <pre 
            class="whitespace-pre-wrap text-[15px] text-gray-800 leading-relaxed font-normal bg-green-50 p-4 rounded-md border border-green-200"
            style="font-family: 'Poppins', sans-serif;">
<%= plan.generatedPlan %>
</pre>

        </div>

      <% }) %>

    </div>

  <% } %>

  <div class="mt-8 text-right">
